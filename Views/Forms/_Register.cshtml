@model TheAgency.Models.RegisterViewModel
<section id="loginForm" class="col-lg-12 col-md-12">
    <h1>Create a new account.</h1>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" , @class = "form-horizontal", role = "form" }))
            {
        <div class="col-lg-6 col-md-6">
            @Html.AntiForgeryToken()
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Name, new { @type = "text", @title = "Full Name (Required)", @placeholder = "Full Name (Required)", data_toggle = "tooltip" })
            @Html.ValidationMessageFor(m => m.Client_Type, "", new { @class = "text-danger" })
            <dl class="radio-buttons">
                <dt>
                    @Html.RadioButtonFor(m => m.Client_Type, "Entertainment")
                </dt>
                <dd>
                    Entertainment
                </dd>
                <dt>
                    @Html.RadioButtonFor(m => m.Client_Type, "Individual")
                </dt>
                <dd>
                    Individual
                </dd>
                <dt>
                    @Html.RadioButtonFor(m => m.Client_Type, "Venue")
                </dt>
                <dd>
                    Venue
                </dd>
            </dl>
            @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.CompanyName, new { @type = "text", @title = "Company Name (Required)", @placeholder = "Company Name (Required)", data_toggle = "tooltip" })
            @Html.ValidationMessageFor(m => m.Address_Line_01, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Address_Line_01, new { @type = "text", @title = "Address Line 01 (Required)", @placeholder = "Address Line 01 (Required)", data_toggle = "tooltip" })
            @Html.ValidationMessageFor(m => m.Address_Line_02, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Address_Line_02, new { @type = "text", @title = "Address Line 02 (Optional)", @placeholder = "Address Line 02 (Optional)", data_toggle = "tooltip" })
            @Html.ValidationMessageFor(m => m.TownCity, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.TownCity, new { @type = "text", @title = "Town / City (Required)", @placeholder = "Town / City (Required)", data_toggle = "tooltip" })
            @Html.ValidationMessageFor(m => m.County, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.County, new { @type = "text", @title = "County (Required)", @placeholder = "County (Required)", data_toggle = "tooltip" })
        </div>
        <div class="col-lg-6 col-md-6">
            @Html.ValidationMessageFor(m => m.Postcode, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Postcode, new { @type = "text", @title = "Postcode (Required)", @placeholder = "Postcode (Required)", data_toggle = "tooltip"})
            @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.ContactNumber, new { @type = "text", @title = "Contact Number (Required)", @placeholder = "Contact Number (Required)", data_toggle = "tooltip"})
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Email, new { @type = "email", @title = "Email Address (Required)", @placeholder = "Email Address (Required)", data_toggle = "tooltip"})
            @Html.ValidationMessageFor(m => m.ConfirmEmail, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.ConfirmEmail, new { @type = "email", @title = "Confirm Email Address (Required)", @placeholder = "Confirm Email Address (Required)", data_toggle = "tooltip"})
            @Html.ValidationMessageFor(m => m.CompanyLogo, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.CompanyLogo, new { @id = "file-upload-label" })
            @Html.TextBoxFor(m => m.CompanyLogo, new { @class="hidden", @type = "file", @accept = "image/*", @title = "Company Logo (Optional)", @placeholder = "Company Logo (Optional)", data_toggle = "tooltip" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.Password, new { @type = "password", @title = "Password (Required)", @placeholder = "Password (Required)", data_toggle = "tooltip"})
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "password", title = "Confirm Password (Required)", @placeholder = "Confirm Password (Required)", data_toggle = "tooltip"})
        </div>
        <input type="submit" value="Register" />
    }
</section>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        setTimeout(function () {
            $('#CompanyLogo').on({
                change: function () {
                    var file = this.files[0];
                    if (file.size > 150000) {
                        $(this).val('');
                        $('#file-upload-label').addClass("error").text("Image " + file.name + " must be under 150KB. It is " + Math.round(file.size/1000) + "KB.");
                    } else if (file.type != 'image/jpeg' && file.type != 'image/png') {
                        $(this).val('');
                        $('#file-upload-label').addClass("error").text("Image " + file.name + " must be either a jpg or png file.");
                    } else {
                        $('#file-upload-label').removeClass("error").text("File to upload: " + file.name);
                    }
                }
            });
        }, 2000);
    });
</script>